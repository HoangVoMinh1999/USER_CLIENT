<section>
		<div class="container">
			<div class="row">
				<div class="col-sm-3">
					<div class="left-sidebar">
						<h2>Danh mục</h2>
						<div class="panel-group category-products" id="accordian"><!--category-productsr-->
							<form action="/showProducts">
								<p style="font-size: 17px;"><input type="radio" name="type" value="Shirt">Shirt</p>
								<p style="font-size: 17px;"><input type="radio" name="type" value="Shoes">Shoes</p>
								<p style="font-size: 17px;"><input type="radio" name="type" value="Trousers">Trousers</p>
								<input type="submit" value="Lọc" style="width: 100%;">
							</form>
						</div><!--/category-productsr-->
					
						<div class="brands_products"><!--brands_products-->
							<h2>Nhãn hiệu</h2>
							<div class="brands-name">
								<ul class="nav nav-pills nav-stacked">
									<form action="/showBrand">
										<p style="font-size: 17px;"><input type="radio" name="brand" value="Nike">Nike</p>
										<p style="font-size: 17px;"><input type="radio" name="brand" value="Adidas">Adidas</p>
										<p style="font-size: 17px;"><input type="radio" name="brand" value="Levis">Levis</p>
										<p style="font-size: 17px;"><input type="radio" name="brand" value="Việt Tiến">Việt Tiến</p>
										<input type="submit" value="Lọc" style="width: 100%;">
									</form>
								</ul>
							</div>
						</div><!--/brands_products-->
						
						<div class="price-range"><!--price-range-->
							<h2>Tầm giá</h2>
							<div class="well">
								 <input type="text" class="span2" value="" data-slider-min="0" data-slider-max="600" data-slider-step="5" data-slider-value="[250,450]" id="sl2" ><br />
								 <b>$ 0</b> <b class="pull-right">$ 600</b>
							</div>
						</div><!--/price-range-->
						
						<div class="shipping text-center"><!--shipping-->
							<img src="images/home/shipping.jpg" alt="" />
						</div><!--/shipping-->
						
					</div>
				</div>
				
				<div class="col-sm-9 padding-right">
					<div class="features_items"><!--features_items-->
						<h2 class="title text-center">Sản phẩm</h2>
						{{#each products}}
						<div class="col-sm-4">
							<div class="product-image-wrapper">
								<div class="single-products">
									<div class="productinfo text-center">
										<img src={{imagePath}} alt="" />
										<h2>{{name}}</h2>
										<p>{{price}}VND</p>
										<a href="#" class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i>Thêm vào giỏ hàng</a>
									</div>
									<div class="product-overlay">
										<div class="overlay-content">
											<h2>{{name}}</h2>
											<p>{{price}}VND</p>
											<a href="#" class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i>Thêm vào giỏ hàng</a>
										</div>
									</div>
								</div>
								<div class="choose">
									<ul class="nav nav-pills nav-justified">
										<form action="/detail">
											<button type="submit" name="_id" value="{{_id}}">Xem chi tiết</button>
										{{!-- <input type="submit" name="_id" value="{{_id}}" > --}}
										</form>
									</ul>
								</div>
							</div>
						</div>
						{{/each}}
					</div><!--features_items-->
				</div>
			</div>
		</div>
	</section>
	

    <script src="js/jquery.js"></script>
	<script src="js/price-range.js"></script>
    <script src="js/jquery.scrollUp.min.js"></script>
	<script src="js/bootstrap.min.js"></script>
    <script src="js/jquery.prettyPhoto.js"></script>
    <script src="js/main.js"></script>